@import '../../common/stylus/mixin.styl';
@import '../../common/stylus/vars.styl';

[role="component:HomeList"]
  background #fff

  .list-item
    box-sizing border-box
    height 114px
    padding 12px 15px
    display flex

    .item-right
      width 100%
      display flex
      flex-direction column
      justify-content space-between
      padding 0 0 0 10px

      .right-top

        .item-line-one
          display flex
          justify-content space-between
          margin 0 0 11px 0

      .right-bottom
        display flex
        justify-content space-between

        .goods-price
          color primaryRed
          font-weight 700
          font-size 16px

  .line-divider
    borderBottom1px(lightGrey, solid)
    margin 0 15px
