@import '../../common/stylus/vars.styl'

[role="component:OrderList"]
  background #fff

  .order-list-item
    display flex
    justify-content space-between
    height 90px
    padding 15px
    border-top 1px solid lightGrey

    .item-left
      display flex

      .item-image

        >img
          width 120px
          height 90px

      .item-content
        margin 0 0 0 10px

        >span
          display block
          margin 0 0 8px 0

    .item-comment
      display flex
      align-items center

      >button
        width 80px
        text-align center
        background-color rgb(233, 32, 61)
        color #fff
        padding 5px 0
        border 0
        border-radius 3px
        font-size 16px
