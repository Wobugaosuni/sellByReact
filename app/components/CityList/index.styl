@import '../../common/stylus/vars.styl';

[role="component:CityList"]

  >h3
    padding 20px 28px

  >ul
    padding 0 0 0 28px

    .city-item
      display inline-block
      box-sizing border-box
      width 33%
      padding 0 22px 15px 0

      >span
        display block
        border 1px solid lightGrey
        text-align center
        height 34px
        line-height 34px
        cursor pointer

