@import '../../common/stylus/vars.styl';

[role="component:SearchHeader"]
  display flex
  align-items center
  height headerHeight
  background-color primaryRed
  color #fff

  >a
    display flex
    align-items center
    padding 0 23px
    color #fff

  .header-search
    flex 1
    display flex
    align-items center
    background-color #fff
    border-radius 13px
    height 30px
